rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection (admin)
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Leaders collection
    match /leaders/{leaderId} {
      allow read, write: if true;
    }
    
    // Polls collection
    match /polls/{pollId} {
      allow read, write: if true;
    }
    
    // Votes collection
    match /votes/{voteId} {
      allow read, write: if true;
    }
    
    // Any other collections
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
